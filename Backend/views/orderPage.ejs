<script>
    function initMap() {
        var myLatLng = {lat: 50.464541, lng: 30.519255};

        // Create a map object and specify the DOM element for display.
        var map = new google.maps.Map(document.getElementById('map'), {
            center: myLatLng,
            zoom: 16
        });

        // Create a marker and set its position.
        var marker = new google.maps.Marker({
            map: map,
            position: myLatLng,
            icon:	"assets/images/map-icon.png"
        });

    }

</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBt_EmUTFybtqES2yxXsIuh2MHvruNdqak&callback=initMap"
